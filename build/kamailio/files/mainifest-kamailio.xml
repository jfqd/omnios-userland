<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type='manifest' name='kamailio'>	
	<service name='network/kamailio' type='service' version='1'>
		<create_default_instance enabled='false' />
		<single_instance/>

		<dependency name='multi-user' grouping='require_all' restart_on='none' type='service'>
			<service_fmri value='svc:/milestone/multi-user' />
		</dependency>

		<dependency name='multi-user-server' grouping='require_all' restart_on='none' type='service'>
			<service_fmri value='svc:/milestone/multi-user-server' />
		</dependency>

		<exec_method type='method' name='start' exec='/usr/local/sbin/kamailio start' timeout_seconds='30'>
		  <method_context>
        <method_credential user='kamailio' group='kamailio' />
      </method_context>
    </exec_method>

		<exec_method type='method' name='stop' exec='/usr/local/sbin/kamailio stop' timeout_seconds='60' /> 

		<exec_method type='method' name='restart' exec='/usr/local/sbin/kamailio restart' timeout_seconds='-1' />

		<stability value='Unstable' />
		<template>
			<common_name>
				<loctext xml:lang='C'> Kamailio </loctext> 
			</common_name>
		</template>
	</service>
</service_bundle>
